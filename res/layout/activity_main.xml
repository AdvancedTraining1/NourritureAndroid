<com.bjtu.nourriture.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:silding="http://schemas.android.com/apk/res/com.bjtu.nourriture"
    xmlns:myattr="http://schemas.android.com/apk/res/com.bjtu.nourriture"
    android:id="@+id/id_menu"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    silding:rightPadding="100dp"
    tools:context="com.bjtu.nourriture.MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <include layout="@layout/layout_menu" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            
            <Gallery
	            android:id="@+id/homeRecipeGallery"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
				android:spacing="1dip">
                
            </Gallery>
            <!--
            <HorizontalScrollView
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:scrollbars="none">
    			<com.bjtu.nourriture.MovieLayout
    				android:id="@+id/movieLayout"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    			/>
    		</HorizontalScrollView>
    		-->
    		
    		<!-- 
			android:numColumns="auto_fit" ，GridView的列数设置为自动 
			android:columnWidth="90dp"，每列的宽度，也就是Item的宽度
			android:stretchMode="columnWidth"，缩放与列宽大小同步
			android:verticalSpacing="10dp"，两行之间的边距，如：行一(NO.0~NO.2)与行二(NO.3~NO.5)间距为10dp
			android:horizontalSpacing="10dp"，两列之间的边距
			 -->
			<GridView
			    android:paddingTop="10dp"
			    android:paddingLeft="40dp"
			    android:paddingBottom="20dp"
			    android:id="@+id/gridview"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:numColumns="auto_fit"
			    android:verticalSpacing="10dp"
			    android:horizontalSpacing="20dp"
			    android:columnWidth="62dp"
			    android:stretchMode="columnWidth"
			    android:gravity="center"
			/>
			
			<com.bjtu.nourriture.SlidingSwitcherView  
		        android:id="@+id/slidingLayout"  
		        myattr:auto_play="true"  
		        android:layout_width="wrap_content"  
		        android:layout_height="250dp" >  
  
		        <LinearLayout  
		            android:layout_width="fill_parent"  
		            android:layout_height="fill_parent"  
		            android:orientation="horizontal" >  
	  
	            <Button  
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"  
	                android:background="@drawable/image1" />  
	  
	            <Button  
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"  
	                android:background="@drawable/image2" />  
	  
	            <Button  
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"  
	                android:background="@drawable/image3" />  
	  
	            <Button  
	                android:layout_width="fill_parent"  
	                android:layout_height="fill_parent"  
	                android:background="@drawable/image4" />  
	        	</LinearLayout>  
  
	        	<LinearLayout  
		            android:layout_width="60dip"  
		            android:layout_height="20dip"  
		            android:layout_alignParentBottom="true"  
		            android:layout_alignParentRight="true"  
		            android:layout_margin="15dip"  
		            android:orientation="horizontal" >  
	        	</LinearLayout>  
			</com.bjtu.nourriture.SlidingSwitcherView>
    		
			<TextView
		        android:id="@+id/textView111"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#878282"
		        android:text="           " />
			<TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#878282"
		        
		        android:text="		当季食物" />
			
			<GridLayout
				android:layout_width="fill_parent"  
    			android:layout_height="wrap_content"  
    			android:orientation="horizontal"  
    			android:rowCount="1"  
    			android:columnCount="5" >  
			　　<Button  
			        android:id="@+id/one" 
			        android:textColor="#878282"
			        android:layout_columnSpan="1"    
      				android:layout_gravity="fill" 
			        android:text="土豆"/>  
			　　<Button  
			        android:id="@+id/two" 
			        android:textColor="#878282" 
			        android:layout_columnSpan="1"    
      				android:layout_gravity="fill"
			        android:text="排骨"/>  
				<Button  
	        		android:id="@+id/three" 
	        		android:textColor="#878282" 
	        		android:layout_columnSpan="1"    
      				android:layout_gravity="fill"
	        		android:text="甜品"/>    
			　　<Button  
			        android:id="@+id/four"  
			        android:textColor="#878282"
			        android:layout_columnSpan="1"    
      				android:layout_gravity="fill"
			        android:text="辣菜"/>  
				<Button  
			        android:id="@+id/five"  
			        android:textColor="#878282"
			        android:layout_columnSpan="1"    
      				android:layout_gravity="fill"
			        android:text="家常菜"/>   
  			</GridLayout>
